// Main nav

.nav-main

  $logo-size = 30px

  width: 100%
  padding: 25px
  position: fixed
  top: 0
  z-index: 10

  &.background
    background:$colors-background-primary
    backgroundGradient($colors-background-primary, $colors-background-primary-highlight)

  .nav-logo
    position:relative
    display: inline-block
    float: left
    margin-right:30px
    width: $logo-size
    height: $logo-size
    z-index:1

    object
      pointer-events:none

  h1
    font:$fonts-light
    font-size:42px
    margin:80px 0 0 0
    padding:0
    text-align:left

  h2
    font:$fonts-bold
    font-size:18px
    margin:0 0 20px 0
    padding:0
    text-align:left

  .nav-main-list
    a
      font-size:12px
      margin:0 25px
      display: inline-block
      color: $colors-nav-primary

    a.cta
      margin: 0
      padding:8px 20px 8px 40px
      text-transform: none;
      border-radius: 5px
      line-height:12px
      text-align:center
      border: 1px solid $colors-nav-primary
      background: url("../images/download.svg") no-repeat scroll 15px -78px transparent
      font-weight: bold
      background-color: #eaeaea

      &:hover
        opacity:1
        color:$colors-nav-primary
        background: url("../images/download.svg") no-repeat scroll 15px 6px $colors-nav-secondary

    .list-left
      font:$fonts-nav-left
      float: left
      text-transform: uppercase;
      centerVertical()

    .list-right
      font:$fonts-nav-right
      float: right
      text-align: right
      text-transform: uppercase;
      centerVertical()

      a
        display: inline-block

    &.home
      margin-left: 0
      float: left

  .reveal-nav-btn
    display:none
    position: absolute
    right:0
    margin-right: 30px
    padding:8px 10px 8px 10px
    text-transform: none;
    border-radius: 5px
    line-height:12px
    text-align:center
    color: $colors-nav-primary
    border: 1px solid $colors-nav-primary
    cursor: pointer
    z-index:1

    &:hover
      opacity:1
      color:$colors-nav-primary
      background:$colors-nav-secondary

  .reveal-nav-input
    position: absolute
    right:0
    margin:30px
    display: none
    visibility: hidden
    z-index:1

  .nav-main-list
    //same height as logo for vertical centering
    height: $logo-size
  
  .home
    margin-top: 8px

  /**
  * Page-specific nav styles
  */
  &:not(.home)
    position:relative
    backgroundGradient($colors-background-primary, $colors-background-primary-highlight)

    h1, h2
      color: $colors-nav-secondary

  /**
  * Mobile media styles for medium-width (and under) screens
  */
  @media screen and (max-width: $medium-width)

    h1
      font-size: 4vw
      line-height:4vw

    h2
      font-size:2vw
      line-height:2vw
      margin-top:5px

    .nav-main-list
      width: 100%
      height: 100vh
      visibility:hidden
      opacity:0
      background: $colors-nav-mobile-background
      position: absolute
      top: 0
      left: 0
      margin-top: 0px
      text-align:center
      padding-top:100px
      z-index: 0

      a
        font:$fonts-light
        font-size:24px

      .list-left
        float:none
        background:$colors-nav-mobile-background
        top:0
        transform(none)

        a
          margin: 0
          padding:15px 0

      .list-right
        margin:0
        float:none
        background:$colors-nav-mobile-background
        top:0
        text-transform: uppercase
        text-align:center
        padding-top:10px
        padding-bottom:10px
        transform(none)

        a
          margin: 0
          padding:15px 0
          display:block

        a.cta
          font:$fonts-very-bold
          font-size:24px
          margin:40px auto
          width:200px
          padding-left:20px
          background: url("../images/download.svg") no-repeat scroll 15px -65px transparent

          &:hover
            color:$colors-nav-primary
            background: url("../images/download.svg") no-repeat scroll 15px 18px $colors-nav-secondary

      a
        margin:0
        padding: 8px 30px
        display: block

    .reveal-nav-btn
    .reveal-nav-input
      display: inline-block

    .reveal-nav-input:checked + .nav-main-list
      transition(opacity ease-out 300ms)
      visibility:visible
      opacity:1


  /**
  *  Minimum heading sizes
  */
  @media screen and (max-width: $small-width)
    padding: 15px 25px
    h1
      font-size: 22px
      line-height:40px

    h2
      font-size:12px
      line-height:12px
