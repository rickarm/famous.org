//Content section
section.content
  padding:10px 0 0 0
  background:$colors-content-background

  .separator
    width:100%
    height:1px
    background:#576b84

  .example
    color:$colors-content-foreground
    text-align:left
    max-width:1000px
    padding 0 50px
    margin:0 auto

    h2
      margin-top:80px
      font:$fonts-content-heading
      color:$colors-content-foreground
      font-size:48px
      font-weight:100

    p
      font:$fonts-content-copy
      color:$colors-content-foreground
      font-size:22px
      line-height:35px
      max-width:550px
      margin:0

    img
      margin:80px 0 100px 0

    hr
      margin:100px 100px 0 0
      height:1px
      width:100%
      border:1px solid #587395

  .cta-group
    background:$colors-content-background
    text-align:center
    padding:15px 0

    button
      margin:8px

  @media screen and (max-width: $medium-width)

    .examples
      padding 0 50px

    .copy
      padding 110px 50px

  @media screen and (max-width: $small-width)

    .examples
      padding 0 25px

    .copy
      padding 110px 25px
