// Base styling

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%
  -webkit-text-size-adjust: none

body
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  font:$fonts-body
  color: $colors-body-foreground
  text-align: left

h1, h2, h3
  font:$fonts-heading
//  color:$colors-heading-foreground

h1
  font-size: 80px

h2
  margin-bottom: 15px
  font-size: 28px

h3
  margin-bottom: 10px
  font-size: 16px

p, ul, address
  margin-bottom: 15px

a
  text-decoration: none
  color: $colors-foreground-primary
  transition(all .2s ease-in)
  transform(translateZ(1px))

a:not(.btn)
  &:hover
    opacity: .6
ul
  padding-left: 30px
  list-style-type: disc

  li
    margin-bottom: 5px

section
  padding: 60px 20px

section > h2,
section > p,
section > ul
  margin-left: auto
  margin-right: auto

// Two column layout with margin in between (talks, schedule, tickets)
.dual-column

  h3
    margin-top: 20px
    padding: 5px 15px
    background: $grey-light
    text-align: left

  @media screen and (max-width: $medium-width)

    & > .column
      width: 100%

  @media screen and (min-width: $medium-width + 1px)

    & > .column
      width: 48%

      &:nth-child(odd)
        margin-right: 2%
      &:nth-child(even)
        margin-left: 2%

hr
  width: 80%
  max-width: 400px
  margin: 60px auto 50px
  border: none
  border-top: $grey-border

address span
  display: block

.container
  max-width: $container-width
  margin: 0 auto

.column
  float: left

input[type='text']
  background: #f5f5f5
  border: 1px solid #f5f5f5
  border-radius: 5px
  color: #666
  font-size: 75%
  font-weight: 100
  padding: 15px

// Clearfix
.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both